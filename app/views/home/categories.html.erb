<%= stylesheet_link_tag 'chatroom_index' %>
<div class="page-content">
  <h1 class='title'>依類別尋找討論室</h1>
  <div class="main-content"> <!--main-content-->
    <div class="row">
      <div class="col-md-12">
        <% @categories.each do |sub_categories| %>
          <div class="row panel-box" >
            <% sub_categories.each do |category| %>
              <div class="col-md-3">
                <div class="panel panel-warning" >
                  <div class="panel-heading clickable" id="cb_<%= category.id %>">
                    <h3 class="panel-title" ><%= category.name %></h3>
                    <span class="pull-right clickable"><i class="fas fa-sort fa-lg"></i></span>
                  </div>
                  <div class='collapse' id="category_<%= category.id %>">
                    <div class='panel-body'>
                      <ul>
                        <% category.children.each do |sub_category| %>
                          <li class="list-group-item clickable">
                            <%= link_to sub_category.name, root_path(category_id: sub_category.id) %>
                          </li>
                        <% end %>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class=""><!--樹狀圖 保留空間-->
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="mainModal" tabindex="-1" role="dialog" aria-labelledby="mainModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= yield %>
    </div>
  </div>
</div>
<script type="text/javascript">
  // JavaScript Document
  $(document).on('click', '.panel-heading.clickable', function (e) {
      $(this).parent().children('.collapse').collapse('toggle');
  });
</script>